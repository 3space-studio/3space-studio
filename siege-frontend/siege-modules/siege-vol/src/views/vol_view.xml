<window title="Volume View">
    <stack-panel orientation="vertical">
        <stack-panel>
            <button>
                Select file
            </button>

            <button>
                Extract This File
            </button>

            <button>
                Extract All Files
            </button>

            <edit />
        </stack-panel>

        <header>
            <header.items>
                <heading>Filename</heading>
                <heading>Path</heading>
                <heading>Size (in bytes)</heading>
                <heading>Compression Method</heading>
            </header.items>

        </header>
    </stack-panel>
</window>